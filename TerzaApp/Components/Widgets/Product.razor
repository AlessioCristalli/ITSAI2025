@using System.Text.Json
@using TerzaApp.Dati.Strutture
<style>

    <!-- Design per card -->

    .product-card {
    width: 300px;
    height: 300px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 1rem;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    text-align: center;
    }

    .product-card img {
    max-height: 120px;
    object-fit: contain;
    margin-bottom: 1rem;
    }

    .product-details {
    font-size: 0.9rem;
    }

    <!-- Design per allineamento con larghezza dello schermo -->

    .container2 {
    display: flex;
    width: 100%;
    padding: 1rem;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    text-align: left;
    }

    .container2 .image-container {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    }

    .container2 .image-container img {
    max-width: 100%;
    max-height: 300px;
    object-fit: contain;
    }

    .container2 .details-container {
    flex: 2;
    padding-left: 1rem;
    }

    .container2 .details-container strong {
    font-size: 1.2rem;
    }

</style>
@if (inFila)
{
    <div class="col-md-4">
        <div class="container mt-5 d-flex justify-content-center">
            <div class="product-card bg-light">
                <img src="@source" alt="Prodotto" />
                <div class="product-details">
                    <strong>Nome prodotto: @prodotto.Nome</strong> <br />
                    Descrizione: @prodotto.Descrizione <br />
                    Categoria: @categoria <br />
                    Collezione: @collezione <br />
                    Prezzo: @prodotto.Currency <br />
                    Disponibiltà: @prodotto.Disponibilità
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container2 mt-5">
        <div class="image-container">
            <img src="@source" alt="Prodotto" />
        </div>
        <div class="details-container">
            <strong>Nome prodotto: @prodotto.Nome</strong> <br />
            Descrizione: @prodotto.Descrizione <br />
            Categoria: @categoria <br />
            Collezione: @collezione <br />
            Prezzo: @prodotto.Currency <br />
            Disponibilità: @prodotto.Disponibilità
        </div>
    </div>
}

@code {
    /// <summary>
    /// Il nome del prodotto.
    /// </summary>
    [Parameter] public Prodotto? prodotto { get; set; }
    /// <summary>
    /// parametro per la fonte dell'immagine. prende l'href di pordotto cioè il nome dell'immagine e la concatena al percorso che verrà specificato in <Product source.../>
    /// </summary>
    [Parameter] public string source { get; set; } = "";
    /// <summary>
    /// Parametro per la categoria del prodotto
    /// </summary>
    [Parameter] public string categoria { get; set; } = "";
    /// <summary>
    /// parametro della collezione del prodotto
    /// </summary>
    [Parameter] public string collezione { get; set; } = "";
    /// <summary>
    /// Come verrà mostrato il prodotto, true -> uno accanto all'altro | false -> disposizione verticale grande
    /// </summary>
    [Parameter] public bool inFila { get; set; } = true;
}
