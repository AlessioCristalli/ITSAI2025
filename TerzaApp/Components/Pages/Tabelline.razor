@page "/Moltiplicazioni"

<h3>Moltiplicazioni</h3>

<div class="row px-3">
    <div class="col-md-6">
        <input type="number" class="form-control" @bind="baseTabellina" />
    </div>
    <div class="col-md-6">
        <input type="number" class="form-control" @bind="ripetizioni" />
    </div>
</div>
<div class="col-md-12">
    @calcola()
</div>

@code {
    string baseTabellina = "";
    string ripetizioni = "";
    string risultato = "";
    //MarkupString risultatoHTML = new MarkupString();

    MarkupString calcola()
    {
        int intBaseTabellina = int.Parse(baseTabellina);
        int intRipetizioni = int.Parse(ripetizioni);
        risultato = "";

        for (int i = 1; i <= intRipetizioni; i++)
        {
            int moltiplicazione = intBaseTabellina * i;
            risultato += $"{intBaseTabellina} x {i} = {moltiplicazione}<br />";
        }
            return new MarkupString(risultato);
    }

}
